#!/usr/bin/env node

var program = require('commander');
var csv = require('../lib/csv.js');
var pkg = require('../package.json');

var argValue = '';
program
  .version(pkg.version)
  .arguments('csv')
  .action(function (arg) {
    argValue = arg
  })
  .parse(process.argv);

if (argValue == 'csv') {
  csv.saveAll();
} else {
  var proxy = require('..');
  proxy();
}